@model WebApplication1.Models.Order

@{
    ViewData["Title"] = "Details";
}
@{ Layout = "../Shared/_layout_2.cshtml"; }


<head>
    <style type="text/css">
        * {
            margin: 0;
            padding: 0;
        }

        h3 {
            font-size: 20px;
            width: 800px;
            margin: 0 auto;
            height: 50px;
            text-align: center;
            line-height: 50px;
        }

        table {
            margin: 0 auto;
        }

            table tr > th,
            table tr > td {
                padding: 5px;
                height: 20px;
                line-height: 20px;
                font-size: 16px;
                text-align: center;
            }

        p {
            font-size: 18px;
            text-align: center;
            height: 50px;
            margin: 5px;
            width: 800px;
            margin: 0 auto;
            line-height: 50px;
        }

        .header-p {
            display: flex;
            justify-content: space-around;
        }

        .footer-p {
            display: flex;
            justify-content: space-around;
        }

        #fapiao {
            padding-top: 50px;
            margin: 0 auto;
        }
    </style>
</head>

<div id="fapiao">
    <h3>二手无人书店购书发票</h3>
    <div class="header-p"><span>订单编号：@Model.OrderId </span><span>订单时间：@Model.OrderTime</span></div>
    <table width="800px" border="1" cellpadding="10" align="center" cellspacing="0">

        <tr>
            <th>顺序号</th>
            <th>图书编号</th>
            <th>图书名称</th>
            <th>数量</th>
            <th>图书价格</th>
        </tr>
        <tr>
            <td>1</td>
            <td>@Model.BookId   </td>
            <td>@Model.bookName</td>
            <td>1</td>
            <td>@Model.OrderPrice</td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>合计</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>1</td>
            <td>@Model.OrderPrice</td>
        </tr>
    </table>
    <div class="footer-p"><span>买方：@Model.buyerName</span><span>卖方：@Model.salerName</span><span>开票人：李华    </span></div>
</div>



