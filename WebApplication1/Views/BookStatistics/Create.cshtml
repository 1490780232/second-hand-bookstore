@model WebApplication1.Models.BookStatistics

@{
    ViewData["Title"] = "Create";
}
@{ Layout = "../Shared/_layout_2.cshtml"; }
<h2>增加图书类别</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookCategory" class="control-label">图书类别</label>
                <input asp-for="BookCategory" class="form-control" />
                <span asp-validation-for="BookCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookNum" class="control-label">图书数量</label>
                <input asp-for="BookNum" class="form-control" />
                <span asp-validation-for="BookNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalValue" class="control-label">图书总结</label>
                <input asp-for="TotalValue" class="form-control" />
                <span asp-validation-for="TotalValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="增加" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">返回书籍列表</a>
</div>

