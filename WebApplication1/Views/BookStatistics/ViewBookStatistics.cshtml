@{ 
    Layout = "../Shared/_layout_2.cshtml";
    ViewData["Title"] = "书籍统计图表";
    }
@model IEnumerable<WebApplication1.Models.BookStatistics>

    <script>
        $(function () {
            var options;
            var data = {
                labels: ['法律政治', '计算机', '历史地理', '社会科学', '数理科学', '文学', '医药卫生','语言文字'],

                series: [
                    [3, 4, 2, 4, 5,3,7,4],
                ]
            };


            // line chart
            options = {
                height: "300px",
                showPoint: true,
                axisX: {
                    showGrid: false
                },
                lineSmooth: false,
            };

            new Chartist.Line('#demo-line-chart', data, options);

            // bar chart
            var data1 = {
                labels: ['法律政治', '计算机', '历史地理', '社会科学', '数理科学', '文学', '医药卫生', '语言文字'],

                series: [
                    [49, 104,64, 60, 96,119,380,176],
                ]
            };
            options = {
                height: "300px",
                axisX: {
                    showGrid: false
                },
            };

            new Chartist.Bar('#demo-bar-chart', data1, options);


            // area chart
            options = {
                height: "270px",
                showArea: true,
                showLine: false,
                showPoint: false,
                axisX: {
                    showGrid: false
                },
                lineSmooth: false,
            };

            new Chartist.Line('#demo-area-chart', data, options);


            // multiple chart
            var data = {
                labels: ['2017-08', '2017-09', '2017-10', '2017-11', '2017-12'],
                series: [{
                    name: 'series-real',
                    data: [5, 6, 1, 1, 1],
                }, {
                    name: 'series-projection',
                        data: [122, 234, 50, 35, 20],
                }]
            };

            var options = {
                fullWidth: true,
                lineSmooth: false,
                height: "270px",
                low: 0,
                high: 'auto',
                series: {
                    'series-projection': {
                        showArea: true,
                        showPoint: false,
                        showLine: false
                    },
                },
                axisX: {
                    showGrid: false,

                },
                axisY: {
                    showGrid: false,
                    onlyInteger: true,
                    offset: 0,
                },
                chartPadding: {
                    left: 20,
                    right: 20
                }
            };

            new Chartist.Line('#multiple-chart', data, options);

        });
    </script>

    <h3 class="page-title">书籍统计图表</h3>

    <div class="row">
        <div class="col-md-12">
            
                <div class="panel">
                    <div class="panel-heading">
                      <h3 class="panel-title"> 在库数据数量柱状图</h3>
                    </div>
                    <div class="panel-body">
                        <div id="demo-bar-chart" class="ct-chart"></div>
                    </div>
                </div>
   
        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">在库书籍总价折线图</h3>
                </div>
                <div class="panel-body">
                    <div id="demo-line-chart" class="ct-chart"></div>
                </div>
            </div>
        </div>
    </div>

