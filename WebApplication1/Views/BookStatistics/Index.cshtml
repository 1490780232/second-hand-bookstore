@model IEnumerable<WebApplication1.Models.BookStatistics>
@{ Layout = "../Shared/_layout_2.cshtml"; }
@{
    ViewData["Title"] = "Index";
}
@{int a = 0; int b = 0;}
@foreach (var item in Model)
{
    a += item.TotalValue;
    b += item.BookNum;

}
<h2>在架书籍统计</h2>

<a asp-action="Create">增加新类别</a>
<table class="table">
    <thead>
        <tr>
            <th>
                书籍类别
            </th>
            <th>
                书籍总数
            </th>
            <th>
                书籍总价
            </th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalValue)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookCategory">修改</a> 
                    @*<a asp-action="Details" asp-route-id="@item.BookCategory">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BookCategory">Delete</a>*@
                </td>
            </tr>
        }
        <tr>
            <td>总计</td>
            <td>@b</td>
            <td>@a  </td>
        </tr>
    </tbody>
</table>
