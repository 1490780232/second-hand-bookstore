@model IEnumerable<WebApplication1.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h2>图书列表</h2>

<p>
    <a asp-action="Create">新建图书</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookIbsn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OriPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Press)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookIbsn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Press)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
